    }
}

fun cleanCache(context: Context): Int {
    val cacheDir = context.cacheDir
    val files = cacheDir.listFiles()
    var totalDeleted = 0L

    files?.forEach {
        if (it.delete()) {
            totalDeleted += it.length()
        }
    }

    return (totalDeleted / 1024).toInt() // KB
}
